<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextAppearance">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="AppTextAppearance.Label" parent="AppTextAppearance">
        <item name="android:textColor">@color/black_900</item>
        <item name="android:textSize">@dimen/font_xxmedium</item>
    </style>

    <style name="AppTextAppearance.Title" parent="AppTextAppearance">
        <item name="android:textColor">@color/black_900</item>
        <item name="android:textSize">@dimen/font_xmedium</item>
    </style>

    <style name="AppTextAppearance.Content" parent="AppTextAppearance">
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="AppTextAppearance.Button" parent="AppTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTextAppearance.Button.Border" parent="AppTextAppearance.Button">
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="AppTextAppearance.TextInputLayout" />

    <style name="AppTextAppearance.TextInputLayout.Label" parent="AppTextAppearance.TextInputLayout">
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="AppTextAppearance.TextInputLayout.Input" parent="AppTextAppearance.TextInputLayout">
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="AppTextAppearance.QuestionIndex" parent="AppTextAppearance">
        <item name="android:textColor">@color/question_index_color_selector</item>
        <item name="android:textSize">@dimen/font_xmedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextAppearance.StrongTitle" parent="AppTextAppearance">
        <item name="android:textColor">@color/black_900</item>
        <item name="android:textSize">@dimen/font_xmedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTextAppearance.AppbarTitle" parent="AppTextAppearance">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">@dimen/font_xmedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>