<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Clickable">
        <item name="android:foreground">@drawable/ripple_fx</item>
    </style>

    <style name="ClickableIcon">
        <item name="android:foreground">@drawable/ripple_fx_round</item>
    </style>

    <style name="AppWidget" />

    <style name="AppWidget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:foreground">@drawable/ripple_fx_button</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:backgroundTint">@color/bg_button_state_list</item>
        <item name="android:textAppearance">@style/AppTextAppearance.Button</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/text_button_state_list</item>
        <item name="background">@drawable/shape_button</item>
        <item name="backgroundTint">@color/bg_button_state_list</item>
    </style>

    <style name="AppWidget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="android:textAppearance">@style/AppTextAppearance.TextInputLayout.Label</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="expandedHintEnabled">true</item>
    </style>

    <style name="AppWidget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/AppTextAppearance.Content</item>
    </style>

    <style name="AppWidget.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/AppTextAppearance.Title</item>
    </style>

    <style name="AppWidget.ItemChoice" parent="AppWidget">
        <item name="android:foreground">@drawable/ripple_fx</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/choice_text_color_selector</item>
        <item name="android:background">@drawable/shape_plain_rect</item>
        <item name="background">@drawable/shape_plain_rect</item>
        <item name="android:backgroundTint">@color/choice_background_state_selector</item>
        <item name="backgroundTint">@color/choice_background_state_selector</item>
    </style>

    <style name="AppWidget.ToolbarTitle" parent="AppWidget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">?actionBarSize</item>
        <item name="android:layout_marginEnd">?actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">@dimen/font_xxxmedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppWidget.FloatingActionButton" parent="AppWidget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?colorOnPrimary</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">@dimen/space_xxxlarge</item>
    </style>

    <style name="AppBottomSheetCardShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_large</item>
        <item name="cornerSizeTopLeft">@dimen/radius_large</item>
    </style>
</resources>