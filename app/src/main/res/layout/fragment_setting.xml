<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?colorPrimary"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_curve"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_curve"
            app:layout_constraintTop_toBottomOf="@id/view_top" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_avatar"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:src="@drawable/ic_avatar"
            android:tint="?colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_name"
            style="@style/SettingContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/lbl_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_avatar"
            app:layout_constraintTop_toTopOf="@id/img_avatar"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_email"
            style="@style/SettingContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/lbl_class"
            app:layout_constraintEnd_toEndOf="@id/lbl_name"
            app:layout_constraintStart_toStartOf="@id/lbl_name"
            app:layout_constraintTop_toBottomOf="@id/lbl_name"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_class"
            style="@style/SettingContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/img_avatar"
            app:layout_constraintEnd_toEndOf="@id/lbl_name"
            app:layout_constraintStart_toStartOf="@id/lbl_name"
            app:layout_constraintTop_toBottomOf="@id/lbl_email"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_profile"
            style="@style/SettingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_medium"
            android:drawableStart="@drawable/ic_profile"
            android:text="@string/label_menu_profile"
            app:layout_constraintTop_toBottomOf="@id/view_curve" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line"
            android:layout_marginHorizontal="@dimen/space_large"
            android:background="@color/color_background_black"
            app:layout_constraintTop_toBottomOf="@id/lbl_profile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_logout"
            style="@style/SettingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_medium"
            android:drawableStart="@drawable/ic_logout"
            android:text="@string/lbl_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_divider"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>