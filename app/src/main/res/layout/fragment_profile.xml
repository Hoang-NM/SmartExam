<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?colorPrimary"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_curve"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_curve"
            app:layout_constraintTop_toBottomOf="@id/view_top" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_avatar"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:src="@drawable/ic_avatar"
            android:tint="?colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_name"
            style="@style/ProfileLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_large"
            android:layout_marginTop="@dimen/space_medium"
            android:drawableStart="@drawable/ic_person"
            app:layout_constraintTop_toBottomOf="@id/view_curve"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_email"
            style="@style/ProfileLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_large"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/space_medium"
            app:layout_constraintTop_toBottomOf="@id/lbl_name"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_class"
            style="@style/ProfileLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_large"
            android:drawableStart="@drawable/ic_class"
            app:layout_constraintTop_toBottomOf="@id/lbl_email"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            style="@style/AppWidget.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_large"
            android:text="@string/lbl_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_class"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>