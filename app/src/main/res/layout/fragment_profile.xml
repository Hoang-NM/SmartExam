<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.InputType" />

        <variable
            name="vm"
            type="hoang.nguyenminh.smartexam.ui.profile.ProfileViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?colorPrimary"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_curve"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_curve"
                app:layout_constraintTop_toBottomOf="@id/view_top" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_avatar"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:src="@drawable/ic_avatar"
                android:tint="?colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                android:id="@+id/view_firstname"
                layout="@layout/view_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:hint="@{@string/lbl_first_name}"
                app:inputText="@={vm.firstName}"
                app:layout_constraintTop_toBottomOf="@id/view_curve" />

            <include
                android:id="@+id/view_lastname"
                layout="@layout/view_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:hint="@{@string/lbl_last_name}"
                app:inputText="@={vm.lastName}"
                app:layout_constraintTop_toBottomOf="@id/view_firstname" />

            <include
                android:id="@+id/view_address"
                layout="@layout/view_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:hint="@{@string/lbl_address}"
                app:inputText="@={vm.address}"
                app:layout_constraintTop_toBottomOf="@id/view_lastname" />

            <include
                android:id="@+id/view_class"
                layout="@layout/view_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:hint="@{@string/lbl_class}"
                app:inputText="@{vm.className}"
                app:layout_constraintTop_toBottomOf="@id/view_address" />

            <include
                android:id="@+id/view_gender"
                layout="@layout/view_radio_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:layout_constraintTop_toBottomOf="@id/view_class" />

            <include
                android:id="@+id/view_date_of_birth"
                layout="@layout/view_input_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:hint="@{@string/lbl_date_of_birth}"
                app:icon="@{@drawable/ic_calendar}"
                app:layout_constraintTop_toBottomOf="@id/view_gender" />

            <include
                android:id="@+id/view_phone_number"
                layout="@layout/view_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_large"
                android:layout_marginTop="@dimen/space_medium"
                app:contentInputType="@{InputType.TYPE_CLASS_NUMBER}"
                app:hint="@{@string/lbl_phone_number}"
                app:inputText="@={vm.phoneNumber}"
                app:layout_constraintTop_toBottomOf="@id/view_date_of_birth" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                style="@style/AppWidget.Button.Border"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_save"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                style="@style/AppWidget.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:text="@string/submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_cancel"
                app:layout_constraintWidth_percent="0.4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>